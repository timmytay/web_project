{% extends "__layout.twig" %}
{% import 'macros.twig' as macros %}
{% import 'image_operator.twig' as image_macros %}

{% block content %}
	<div class="d-flex justify-content-center align-items-center">
		{% for object in bread_types %}
			<div class="mt-3 card col-auto text-center mb-3">

					{{ image_macros.img_cropped(object.image, 225, 225, 'img-thumbnail') }}
					{{ macros.btn(object.title, '/' ~ object.url_title, true, 'primary') }}

<div class="container d-flex justify-content-center">
    <div class="btn-group">{{ macros.btn("Описание", '/' ~ object.url_title ~ '/item', true, 'link') }}</div>
    <div class="btn-group">{{ macros.btn("Картинка", '/' ~ object.url_title ~ '/image', true, 'link') }}</div>
</div>
			</div>
		{% endfor %}
	</div>

{% endblock %}
