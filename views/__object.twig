{% extends "__layout.twig" %}
{% block content %}
<h1> {{title}} </h1>
<ul class="nav nav-pills">
    <li class="nav-item">
        <a class="nav-link {{ is_image ? 'active' : '' }}" href="/{{ url_title }}/image">Картинка</a>
    </li>
    <li class="nav-item">
        <a class="nav-link {{ is_info ? 'active' : '' }}" href="/{{ url_title }}/info">Описание</a>
    </li>
</ul>

{% if is_image or is_info %}
<div class="frame" style="border: 2px solid #000; padding: 10px; margin: 10px; border-radius: 5px; background-color: #f8f8f8; overflow: hidden;">
    {% block objectContent %}{% endblock %}
</div>
{% endif %}
{% endblock %}